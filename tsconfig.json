{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",                     /* JavaScript version for output */
    "module": "commonjs",                   /* Module system to use */
    "rootDir": "./src",                     /* Source files location */
    "outDir": "./dist",                     /* Compiled JS output location */
    "esModuleInterop": true,                /* Enable default imports for CommonJS modules */
    "forceConsistentCasingInFileNames": true,  /* Ensure consistent casing in imports */
    "strict": true,                         /* Enable all strict type-checking options */
    "noImplicitAny": false,                 /* Allow implicit any types */
    "skipLibCheck": true,                   /* Skip type checking for declaration files */
    //"types": ["node"]                       /* Enable Node.js type definitions */
  },
  "include": ["src"],                       /* Include source files in compilation */
  "exclude": ["node_modules", "dist"]       /* Exclude folders from compilation */
}
